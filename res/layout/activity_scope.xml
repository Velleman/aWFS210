        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llCH2"
        android:layout_alignParentLeft="@id/llCH1helper"
        android:layout_alignRight="@id/llCH1helper"
        android:layout_below="@id/seperatorV4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTrigger"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/trigger" />

        <Button
            android:id="@+id/btnTriggerCh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
