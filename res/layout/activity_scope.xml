                android:text="@string/AC"
                android:background="@drawable/backgroundmeasurements" 
                android:textSize="17sp"/>

            <Button
                android:id="@+id/fakeMarkerButton1"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
